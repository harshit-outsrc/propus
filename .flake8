[flake8]
ignore = D203,W504,W503
exclude =
    .git,
    __pycache__,
    env/*
    propus/__init__.py
    tools/start_tests.py
    tests/*
per-file-ignores =
    propus/helpers/anthology.py:E501
    propus/sql/calbright/seed_data/staff.py:E501
    propus/sql/calbright/calbright.py:F401
    propus/twilio/_message.py:E501
    propus/twilio/_service.py: E501
    propus/calbright_sql/alembic/env.py: F401
max-line-length = 120